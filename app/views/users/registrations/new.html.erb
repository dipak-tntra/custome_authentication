<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
        <span class="login100-form-title p-b-33">
          Sign up
        </span>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'login100-form') do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field wrap-input100 rs1">
            <%= f.text_field :name, autofocus: true, placeholder: 'User Name', class: 'input100' %>
            <span class="focus-input100-1"></span>
            <span class="focus-input100-2"></span>
          </div>

          <div class="field wrap-input100 rs1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'input100' %>
            <span class="focus-input100-1"></span>
            <span class="focus-input100-2"></span>
          </div>

          <div class="field wrap-input100 rs1 txt1">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'New Password', class: 'input100' %>
            <span class="focus-input100-1"></span>
            <span class="focus-input100-2"></span>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>

          <div class="field wrap-input100 rs1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: 'input100' %>
            <span class="focus-input100-1"></span>
            <span class="focus-input100-2"></span>
          </div>

          <div class="actions wrap-input100 rs1">
            <%= f.submit "Sign up", class: 'login100-form-btn' %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
    </div>
  </div>
</div>
